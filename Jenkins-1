pipeline {
    agent any

    environment {
        IMAGE_NAME = 'efleyer-app'
        DOCKER_REGISTRY = 'faical194' // Remplace ça si tu pushes vers Docker Hub
        DOCKER_CREDENTIALS_ID = 'mfaical91' // ID des identifiants dans Jenkins
    }

    stages {
        stage('Checkout') {
            steps {
                checkout scm
            }
        }

        stage('Build Docker Image') {
            steps {
                script {
                    dockerImage = docker.build("${IMAGE_NAME}:${BUILD_NUMBER}")
                }
            }
        }

        stage('Test') {
            steps {
                script {
                    echo 'Tests à implémenter selon ta stack (ex: npm test, pytest, etc.)'
                    // Exemple pour Node.js :
                    // sh 'npm install'
                    // sh 'npm test'
                }
            }
        }

        stage('Push to Docker Registry') {
            steps {
                script {
                    docker.withRegistry("https://index.docker.io/v1/", "${DOCKER_CREDENTIALS_ID}") {
                        dockerImage.push("${BUILD_NUMBER}")
                        dockerImage.push("latest")
                    }
                }
            }
        }

        stage('Deploy') {
            steps {
                script {
                    echo 'Déploiement en cours...'
                    // Exemple si tu utilises Docker Compose
                    // sh 'docker-compose down'
                    // sh 'docker-compose up -d --build'
                }
            }
        }
    }

    post {
        always {
            echo 'Pipeline terminé.'
        }
        success {
            echo 'Déploiement réussi !'
        }
        failure {
            echo 'Échec du pipeline.'
        }
    }
}

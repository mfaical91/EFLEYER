  
   pipeline {
    agent any

    environment {
        REGISTRY_CREDENTIALS = credentials('dev-server-credentials') // ID des identifiants Jenkins
        IMAGE_NAME = 'efleyer'
        DOCKER_IMAGE  = 'efleyer'
        IMAGE_TAG = "${env.BUILD_NUMBER}"
        REGISTRY_URL = 'docker.io/faical194' // Remplacez par votre registre Docker
        DEV_SERVER = 'ubuntu@192.168.101.138'
        PROD_SERVER = 'ubuntu@192.168.101.140'
    }

    stages {
        stage('Cloner le dépôt') {
            steps {
                  sh "docker build -t ${DOCKER_IMAGE}:${IMAGE_TAG} ."
                 }
        }

        stage('Construire l\'image Docker') {
            steps {
                script {
                    dockerImage = docker.build("${REGISTRY_URL}/${IMAGE_NAME}:${IMAGE_TAG}")
                }
            }
        }

        stage('Pousser l\'image vers le registre') {
           steps {
            withCredentials([usernamePassword(credentialsId: 'dockerhub-credentials-id', usernameVariable: 'DOCKER_USER', passwordVariable: 'DOCKER_PASS')]) {
                sh """
                    echo "$DOCKER_PASS" | docker login -u "$DOCKER_USER" --password-stdin
                    docker push ${DOCKER_IMAGE}:${IMAGE_TAG}
                    docker tag ${DOCKER_IMAGE}:${IMAGE_TAG} ${DOCKER_IMAGE}:latest
                    docker push ${DOCKER_IMAGE}:latest
                """
            }
        }
        }

        stage('Déployer sur le serveur de développement') {
            steps {
                sshagent (credentials: ['ssh-dev-server']) {
                    sh """
                        ssh -o StrictHostKeyChecking=no ${DEV_SERVER} '
                            docker pull ${REGISTRY_URL}/${IMAGE_NAME}:${IMAGE_TAG} &&
                            docker stop efleyer-dev || true &&
                            docker rm efleyer-dev || true &&
                            docker run -d --name efleyer-dev -p 8080:80 ${REGISTRY_URL}/${IMAGE_NAME}:${IMAGE_TAG}
                        '
                    """
                }
            }
        }

        stage('Validation manuelle pour la production') {
            steps {
                input message: 'Souhaitez-vous déployer en production ?'
            }
        }

        stage('Déployer sur le serveur de production') {
            steps {
                sshagent (credentials: ['ssh-prod-server']) {
                    sh """
                        ssh -o StrictHostKeyChecking=no ${PROD_SERVER} '
                            docker pull ${REGISTRY_URL}/${IMAGE_NAME}:${IMAGE_TAG} &&
                            docker stop efleyer-prod || true &&
                            docker rm efleyer-prod || true &&
                            docker run -d --name efleyer-prod -p 80:80 ${REGISTRY_URL}/${IMAGE_NAME}:${IMAGE_TAG}
                        '
                    """
                }
            }
        }
    }
}


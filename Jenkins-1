pipeline {
    agent any

    environment {
        DOCKER_IMAGE = 'eflyer'
        CONTAINER_NAME = 'eflyer-container'
        HOST_PORT = '8080'
        CONTAINER_PORT = '80'
    }

        stage('Stop and Remove Previous Container') {
            steps {
                script {
                    // Arrêter et supprimer le conteneur s'il existe déjà
                    sh "docker stop ${env.CONTAINER_NAME} || true"
                    sh "docker rm ${env.CONTAINER_NAME} || true"
                }
            }
        }

        stage('Run Docker Container') {
            steps {
                script {
                    echo "Running Docker container..."
                    sh "docker run -d -p ${env.HOST_PORT}:${env.CONTAINER_PORT} --name ${env.CONTAINER_NAME} ${env.DOCKER_IMAGE}"
                }
            }
        }
    


}
